<div class="row">
    {{#each products}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{this.productName}}
                </h4>
                <img src="{{this.photo}}" height="100"></img>
                <p>{{this.description}}</p>
                <p>Code: {{this.code}}</p>
                <p> $ {{this.price}}</p>
                <p>In Stock: {{this.stock}}</p>

                <form action="/cart/removeProduct/{{this._id}}" method="POST">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Remove from Cart
                    </button>
                </form>

            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">There are no Products in the Cart.</p>
            <a href="/product" class="btn btn-success btn-block">Go Shopping!</a>
        </div>
    </div>
    {{/each}}
</div>