<div class="col-md-4 mc-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit product</h3>
        </div>
        <div class="card-body">
            <form action="/product/edit-product/{{product._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <input type="text" name="productName" class="form-control" placeholder="Product Name"
                    value="{{product.productName}}">
                <label>Name</label>
                    <textarea name="description" class="form-control">{{product.description}}</textarea>
                <label>Code</label>
                    <textarea name="code" class="form-control">{{product.code}}</textarea>
                <label>Photo</label>
                    <textarea name="photo" class="form-control">{{product.photo}}</textarea>
                <label>Price</label>
                    <textarea name="price" class="form-control">{{product.price}}</textarea>
                <label>Stock</label>
                    <textarea name="stock" class="form-control">{{product.stock}}</textarea>
                <button class="btn btn-primary btn-block" type="submit">
                    Save
                </button>
        </div>
        </form>
    </div>